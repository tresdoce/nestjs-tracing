{
  "name": "@tresdoce/nestjs-tracing",
  "version": "0.0.1",
  "description": "NestJS tracing module",
  "author": {
    "name": "Maximiliano \"Mex\" Delgado",
    "email": "mdelgado@tresdoce.com.ar",
    "url": "https://rudemex.github.io/"
  },
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "keywords": [
    "nestjs",
    "tracing",
    "jaeger"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tresdoce/nestjs-tracing.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tresdoce/nestjs-tracing/issues"
  },
  "homepage": "https://github.com/tresdoce/nestjs-tracing#readme",
  "private": false,
  "scripts": {
    "prebuild": "shx rm -rf pkg",
    "build": "pika build",
    "lint": "eslint \"{src,apps,libs,test,__test__}/**/*.ts\" --fix",
    "pre-commit": "lint-staged",
    "lint-staged": "lint-staged",
    "publish": "pika publish",
    "test": "jest --runInBand --detectOpenHandles --coverage",
    "release": "standard-version"
  },
  "peerDependencies": {
    "@nestjs/common": "^8.1.2",
    "@nestjs/core": "^8.1.2",
    "@nestjs/platform-express": "^8.1.2",
    "jaeger-client": "^3.19.0",
    "opentracing": "^0.14.5",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.4.0"
  },
  "dependencies": {
    "@nestjs/common": "^8.2.0",
    "@nestjs/core": "^8.2.0",
    "@nestjs/platform-express": "^8.2.0",
    "jaeger-client": "^3.19.0",
    "lodash": "^4.17.21",
    "opentracing": "^0.14.5",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.4.0",
    "shx": "^0.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-proposal-decorators": "^7.15.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.15.6",
    "@babel/plugin-proposal-optional-chaining": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@nestjs/cli": "^8.1.4",
    "@nestjs/schematics": "^8.0.4",
    "@nestjs/testing": "^8.2.0",
    "@pika/cli": "^0.2.0",
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-node": "^0.9.2",
    "@pika/plugin-build-types": "^0.9.2",
    "@pika/plugin-standard-pkg": "^0.9.2",
    "@pika/plugin-ts-standard-pkg": "^0.9.2",
    "@types/express": "^4.17.11",
    "@types/jaeger-client": "^3.18.3",
    "@types/jest": "27.0.2",
    "@types/node": "^16.11.7",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^3.4.1",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "jest-extended": "^0.11.5",
    "jest-sonar-reporter": "^2.0.0",
    "lint-staged": "^10.4.0",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "standard-version": "^9.3.2",
    "supertest": "^6.1.6",
    "ts-jest": "^26.5.4",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.4"
  },
  "commitlint": {
    "extends": "@commitlint/config-conventional"
  },
  "prettier": {
    "semi": true,
    "tabWidth": 2,
    "singleQuote": true,
    "printWidth": 100,
    "trailingComma": "all"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-ts-standard-pkg",
        {
          "exclude": [
            "**/__test__/*"
          ]
        }
      ],
      [
        "@pika/plugin-build-node",
        {
          "exclude": [
            "**/__test__/*"
          ]
        }
      ],
      [
        "@pika/plugin-build-types",
        {
          "exclude": [
            "**/__test__/*"
          ]
        }
      ]
    ]
  },
  "engines": {
    "node": "14.4.0",
    "npm": "6.14.5"
  }
}
